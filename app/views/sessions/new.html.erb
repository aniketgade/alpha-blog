<h1 class="text-center mt-4"><%= t('layouts.navigation.login')%></h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-3 bg-primary rounded", local: true) do |f| %>
        <div class="form-group row mb-3">
          <%= f.label :email, class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.email_field :email, class: "form-control shadow rounded", placeholder: t('.enter_your_email_address') %>
          </div>
        </div>

        <div class="form-group row mb-3">
          <%= f.label :password, class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.password_field :password, class: "form-control shadow rounded", placeholder: t('.enter_your_password') %>
          </div>
        </div>

        <div class="form-group text-center justify-content-center mb-3">
          <%= f.submit t('layouts.navigation.login'), class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
    <div class="mb-3 text-center">
      <%= link_to t('articles.form.cancel_and_return'), articles_path, class: "text-info" %>
    </div>
  </div>
</div> 